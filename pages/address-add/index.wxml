<view class="container">
  <view wx:if="{{addressData}}" class="HotName">编辑地址<text></text></view>
  <view wx:if="{{!addressData}}" class="HotName">新增地址<text></text></view>
    <form bindsubmit="bindSave">
    <view class="form-box">
        <view class="row-wrap">
            <view class="label">联系人</view>
            <view class="label-right">
                <input name="linkMan" class="input" type="text" placeholder="姓名" value="{{addressData.linkMan}}{{wxaddress.userName}}" placeholder-style="color: #c5c9ca"/>
            </view>
        </view>
        <view class="row-wrap">
            <view class="label">手机号码</view>
            <view class="label-right">
                <input name="mobile" class="input" maxlength="11" type="number" placeholder="11位手机号码" value="{{addressData.mobile}}{{wxaddress.telNumber}}" placeholder-style="color: #c5c9ca"/>
            </view>
        </view>
        <view class="row-wrap" bindtap="selectCity">
            <view class="label">选择地区</view>
            <picker bindchange="bindPickerProvinceChange" range="{{provinces}}">
              <view class="picker {{selProvince=='请选择'?'hui':''}}">
                {{selProvince}}
              </view>
            </picker>
            <picker bindchange="bindPickerCityChange" range="{{citys}}">
              <view class="picker {{selCity=='请选择'?'hui':''}}">
                {{selCity}}
              </view>
            </picker>
            <picker bindchange="bindPickerChange" range="{{districts}}">
              <view class="picker {{selDistrict=='请选择'?'hui':''}}">
                {{selDistrict}}
              </view>
            </picker>
        </view>
        <view class="row-wrap">
            <view class="label">详细地址</view>
            <view class="label-right">
              <input class="input" name="address" type="text" placeholder="街道门牌信息" value="{{addressData.address}}{{wxaddress.detailInfo}}" placeholder-style="color: #c5c9ca"/>
            </view>
        </view>
        <view class="row-wrap">
            <view class="label">邮政编号</view>
            <view class="label-right">
                <input name="code" class="input" type="text" placeholder="6位邮政编码" value="{{addressData.code}}{{wxaddress.postalCode}}" placeholder-style="color: #c5c9ca"/>
            </view>
        </view>
    </view>
    <button class="save-btn" formType="submit">保存</button>
    <button wx:if="{{!addressData}}" class="wechat-btn" bindtap="readFromWx">从微信读取</button>
    <button class="del-btn" bindtap="deleteAddress" data-id="{{addressData.id}}" wx:if="{{addressData}}">删除该地址</button>
    <button class="cancel-btn" bindtap="bindCancel">取消</button>
    </form>
</view>